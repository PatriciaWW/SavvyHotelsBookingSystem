<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="11dp">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Lancet Pathologist"
                android:fontFamily="@font/montserrat"
                android:id="@+id/hotel_name"
                android:textAlignment="textStart"
                android:textColor="#353232"
                android:textStyle="bold"
                android:textSize="16sp"/>



            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Permit id: 1298734969"
                android:id="@+id/hotel_location"
                android:textAlignment="textStart"
                android:fontFamily="@font/montserrat"
                android:textColor="#353232"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear2"
                android:layout_toEndOf="@+id/labimage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Lancet@gmail.com"
                    android:id="@+id/hotel_category"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#787474"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear3"
                android:layout_toEndOf="@+id/labimage"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Lancet@gmail.com"
                    android:id="@+id/hotel_desc"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#787474"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All rooms"
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:id="@+id/all_rooms"
                    android:layout_marginTop="15dp"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search rooms"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:id="@+id/search_room"
                    android:layout_marginTop="15dp"/>

            </LinearLayout>



        </LinearLayout>

</androidx.cardview.widget.CardView>