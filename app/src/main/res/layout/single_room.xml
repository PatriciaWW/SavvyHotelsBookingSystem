<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

<!--        <de.hdodenhof.circleimageview.CircleImageView-->
<!--            android:layout_width="55dp"-->
<!--            android:layout_height="55dp"-->
<!--            android:id="@+id/room_image"-->
<!--            android:src="@drawable/screen1"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_marginLeft="10dp"/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linear1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Lancet Pathologist"
                android:fontFamily="@font/montserrat"
                android:id="@+id/room_name"
                android:textAlignment="textStart"
                android:textColor="#353232"
                android:textStyle="bold"
                android:textSize="16sp"/>



            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Permit id: 1298734969"
                android:id="@+id/room_category"
                android:textAlignment="textStart"
                android:fontFamily="@font/montserrat"
                android:textColor="#353232"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear2"
                android:layout_toEndOf="@+id/room_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Permit id: 1298734969"
                    android:id="@+id/no_guests"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#353232"
                    android:textStyle="bold"
                    android:textSize="12sp"/>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Permit id: 1298734969"
                    android:id="@+id/status"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#353232"
                    android:textStyle="bold"
                    android:textSize="12sp"/>


            </LinearLayout>





        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>